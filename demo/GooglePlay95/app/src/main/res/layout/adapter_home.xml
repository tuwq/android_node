<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--白色卡片区域-->
    <LinearLayout
        android:background="@drawable/selector_list_item"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--第一行-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_default"
                android:id="@+id/iv_image"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tv_name"
                    android:singleLine="true"
                    android:text="有缘千里来相会"
                    android:textSize="16sp"
                    android:textColor="@color/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:isIndicator="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:id="@+id/rb_star"
                    style="@android:style/Widget.RatingBar"
                    android:progressDrawable="@drawable/ratingbar_drawable"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp" />
                <TextView
                    android:id="@+id/tv_size"
                    android:singleLine="true"
                    android:text="3.1MB"
                    android:textSize="14sp"
                    android:textColor="@color/txt_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <!--线-->
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/txt_small"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <!--描述-->
        <TextView
            android:id="@+id/tv_des"
            android:singleLine="true"
            android:text="描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，"
            android:textSize="14sp"
            android:textColor="@color/txt_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>